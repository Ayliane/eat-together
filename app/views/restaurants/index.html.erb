
<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center">
      <div class="col-xs-6">
        <div id="restaurants-list">
          <%= simple_form_for :selection do |f| %>
            <%= f.input :food_type_1, collection: food_types, selected: params[:food_type_1] %>
          <% end %>
          <h1><%= params[:food_type_1] %><h1>
            <input type="hidden" id="food_type_1" value="<%= params[:food_type_1] %>">
            <%= yield %>
          </div>
        </div>
        <div class="col-xs-6">
          <div id="restaurants-list-2">
            <%= simple_form_for :selection do |f| %>
              <%= f.input :food_type_2, collection: food_types, selected: params[:food_type_2] %>
            <% end %>
            <h1><%= params[:food_type_2] %><h1>
              <input type="hidden" id="food_type_2" value="<%= params[:food_type_2] %>">
            </div>
          </div>
        </div>
      </div>
    </div>

